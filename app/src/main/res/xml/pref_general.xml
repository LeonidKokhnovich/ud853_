<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_title_location"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default_val"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/pref_title_temp_units"
        android:key="@string/pref_key_temp_units"
        android:defaultValue="@string/pref_default_temp_units"
        android:entries="@array/pref_temp_units_options"
        android:entryValues="@array/pref_temp_units_values"></ListPreference>

</PreferenceScreen>